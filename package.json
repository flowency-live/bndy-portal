{
  "name": "bndy-portal",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "cross-env NODE_TLS_REJECT_UNAUTHORIZED=0 next dev --experimental-https -p 3000 -H app.local.bndy.test",
    "build": "next build",
    "start": "cross-env NODE_TLS_REJECT_UNAUTHORIZED=0 next start --experimental-https -p 3000 -H app.local.bndy.test",
    "lint": "next lint",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "setup:hosts": "powershell -ExecutionPolicy Bypass -File scripts/update-hosts.ps1"
  },
  "dependencies": {
    "bndy-ui": "file:../bndy-ui",
    "firebase": "^11.6.0",
    "firebase-admin": "^13.4.0",
    "framer-motion": "^12.23.12",
    "next": "15.5.0",
    "next-themes": "^0.4.4",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-icons": "^5.5.0",
    "react-phone-number-input": "^3.4.12"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.19.11",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/coverage-v8": "^3.2.4",
    "cross-env": "^7.0.3",
    "eslint": "^9",
    "eslint-config-next": "15.5.0",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "jsdom": "^26.1.0",
    "tailwindcss": "^4",
    "tsx": "^4.20.4",
    "typescript": "^5",
    "vitest": "^3.2.4",
    "zod": "^4.0.17"
  }
}
